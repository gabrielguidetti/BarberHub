@model BarberHub.ViewModel.BarberViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BarberViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @Html.HiddenFor(model => model.BarberShopId)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(model => model.Name) <br/>
                @Html.EditorFor(model => model.Name) <br />
                @Html.ValidationMessageFor(model => model.Name) <br />
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.StartWorkTime) <br />
                @Html.EditorFor(model => model.StartWorkTime) <br />
                @Html.ValidationMessageFor(model => model.StartWorkTime) <br />
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.FinishWorkTime) <br />
                @Html.EditorFor(model => model.FinishWorkTime) <br />
                @Html.ValidationMessageFor(model => model.FinishWorkTime) <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="BarberShop" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
